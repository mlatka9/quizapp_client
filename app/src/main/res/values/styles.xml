<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">#FFB907</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
<!--        <item name="colorYellow">@color/colorYellow</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="answerTextView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@color/black_dark</item>
        <item name="android:padding">10dp</item>

        <item name="android:text">Odpowied≈∫</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/yellow_light</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="questionTextView">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:background">@color/black_dark</item>
        <item name="android:padding">10dp</item>

        <item name="android:text">Oczekiwanie na pytanie ...</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/yellow_light</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="currentQuestionTextView">
        <item name="android:text">Pytanie 0 / 5</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/black_dark</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/yellow_light</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="answerTextViewCorrect">
        <item name="android:background">#4CAF50</item>
    </style>

    <style name="answerTextViewWrong" parent="@style/answerTextView">
        <item name="android:background">#E91E1E</item>
        <item name="android:textColor">#009688</item>
    </style>

</resources>